<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_main"
    android:orientation="vertical"
    android:clickable="true"
    android:paddingBottom="@dimen/content_margin_dimen"
    android:paddingLeft="@dimen/content_margin_dimen"
    android:paddingRight="@dimen/content_margin_dimen"
    android:paddingTop="0dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2B2937"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="0dp" >

        <ImageView
                android:id="@+id/prevBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/background_shagnxia"
                android:src="@drawable/icon_prev"
                android:gravity="center"
                android:paddingRight="0dp"
                 />
        
        <RadioGroup
            android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/yesterdayRadio"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/login_radio_btn_bg"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:paddingRight="2dp"
                android:text="@string/member_date_yesterday"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/login_radio_btn_txt" />

            <RadioButton
                android:id="@+id/todayRadio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/login_radio_btn_bg"
                android:button="@null"
                android:gravity="center"
                android:paddingRight="2dp"
                android:text="@string/member_date_today"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/login_radio_btn_txt" />

        </RadioGroup>
        
        <ImageView
                android:id="@+id/nextBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/background_shagnxia"
                android:src="@drawable/icon_next"
                android:gravity="center"
                android:paddingRight="0dp"
                 />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@android:color/transparent"
        android:gravity="left|center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/current_date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#00B9FD" />
        
    </LinearLayout>

    <ListView
        android:id="@+id/shang_detail_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:cacheColorHint="#00000000"
        android:divider="@drawable/zong_splitor"
        android:dividerHeight="2dp"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:smoothScrollbar="true" />
</LinearLayout>