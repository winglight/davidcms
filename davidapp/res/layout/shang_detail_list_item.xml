<?xml version="1.0" encoding="utf-8"?>
<!-- This file is at /res/layout/list_item.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#33110704"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="2dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="left|center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="@string/member_detail_downline"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/shang_row_name_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:paddingRight="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#00B9FD" />

        <ImageView
            android:id="@+id/shang_row_online_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingRight="0dp"
            android:src="@drawable/icon_online" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#E01D192F"
                android:singleLine="true"
                android:text="@string/member_detail_principle"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/member_menu_text_color" />

            <TextView
                android:id="@+id/shang_row_principle_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#E01D192F"
                android:singleLine="true"
                android:text="@string/member_title_zong"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/member_menu_text_color" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#E01D192F"
                android:singleLine="true"
                android:text="@string/member_detail_updown"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/member_menu_text_color" />

            <TextView
                android:id="@+id/shang_row_updown_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#E01D192F"
                android:singleLine="true"
                android:text="@string/member_title_zong"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/member_menu_text_color" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#E01D192F"
                android:singleLine="true"
                android:text="@string/member_client_name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/member_menu_text_color" />

            <TextView
                android:id="@+id/shang_row_client_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#E01D192F"
                android:singleLine="true"
                android:text="@string/member_title_zong"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/member_menu_text_color" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#E01D192F"
                android:singleLine="true"
                android:text="@string/member_detail_memo"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/member_menu_text_color" />

            <TextView
                android:id="@+id/shang_row_memo_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#E01D192F"
                android:singleLine="false"
                android:text="@string/member_title_zong"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/member_menu_text_color" />
        </TableRow>
    </TableLayout>

</LinearLayout>